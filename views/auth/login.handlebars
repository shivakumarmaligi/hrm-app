<section id="AuthBlock my-4">
  <article class="col-md-4 mx-auto bg-white card my-4">
    <div class="card-body">
      <h2
        class="h2 font-weight-bold text-secondary text-uppercase py-2"
      >Login</h2>
      <form action="/auth/login" method="post">
        <div class="form-group"><label for="">Email</label><input
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="enter a email"
            required
          /></div>
        <div class="form-group"><label for="">Password</label><input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="enter a password"
            required
          /></div>
        <div class="form-group">
            <a href="/auth/register" class="badge badge-secondary-outline float-right my-2 p-2">Register</a>
          <button class="btn btn-primary btn-block my-2">Login</button>
        </div>
      </form>
    </div>
  </article>
</section>